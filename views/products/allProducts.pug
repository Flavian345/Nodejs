extends ../layout
block content
    .pjesa-profilit
        h2 All Products
        if produktet.length >0
            table 
                tr 
                    th Produkti
                    th Foto
                    th.qmimi Qmimi 
                    th Edit 
                    th Delete
                each e in produktet 
                    tr 
                        td=e.name
                        td
                            img(src="/images/products/"+e.image, alt=e.name)
                        td.qmimi #{e.price}$
                        td.edit
                            a(href="/products/editProdAdmin/"+e._id) Edit
                        td 
                            form(action="/products/deleteProdAdmin/"+e._id method="POST")
                                button.danger(type="submit" value="Delete") Delete
        else 
            .no-pord
                h1 Ju nuk keni asnje produkt
        .pjesa-link
             ul.link
                if current > 1 
                    li.arrow 
                        a(href=`?page=${parseInt(current)-1}`)
                            <i class="fas fa-arrow-alt-circle-left"></i>
                - var i=1
                while i <=pages 
                    a(href=`?page=${i}`)
                        li.link_n
                            =i++
                if current < pages
                    li.arrow  
                        a(href=`?page=${parseInt(current)+1}`)
                            <i class="fas fa-arrow-alt-circle-right"></i>
        .allpord 
            a(href="/users/profile") Kthehu Pas 