extends ../layout 
include ../mixins/ProductCard
block content
    .pjesa-shop
        h1 Produktet
        .produkti1 
            each product in produktet 
                +ProductCard(product)
        .pjesa-link
             ul.link
                if current > 1 
                    li.arrow 
                        a(href=`?page=${parseInt(current)-1}`)
                            <i class="fas fa-arrow-alt-circle-left"></i>
                - var i=1
                while i <=pages 
                    a(href=`?page=${i}`)
                        li.link_n
                            =i++
                if current < pages
                    li.arrow 
                        a(href=`?page=${parseInt(current)+1}`)
                            <i class="fas fa-arrow-alt-circle-right"></i>